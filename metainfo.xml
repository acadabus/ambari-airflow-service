<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>AIRFLOW_CUSTOM</name>
      <displayName>Airflow</displayName>
      <comment>Airflow is cool</comment>
      <version>59</version>
      <components>
        <component>
          <name>Airflow</name>
          <displayName>Airflow</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <commandScript>
            <script>scripts/airflow.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>300</timeout>
          </commandScript>
        </component>
        <component>
          <name>AirflowPortForwarding</name>
          <displayName>Airflow port forward</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <commandScript>
            <script>scripts/port_forward.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>300</timeout>
          </commandScript>
        </component>

      </components>

      <osSpecifics>
        <osSpecific>
          <osFamily>any</osFamily>
        </osSpecific>
      </osSpecifics>

      <commandScript>
        <script>scripts/service_check.py</script>
        <scriptType>PYTHON</scriptType>
        <timeout>300</timeout>
      </commandScript>

      <configuration-dependencies>
        <config-type>airflow-env</config-type>
        <config-type>port-forward-env</config-type>
      </configuration-dependencies>
    </service>
  </services>
</metainfo>
